#!/usr/bin/env ruby

require 'heroshell'
require 'optparse'

options = {
    :sync => false
}
parser = OptionParser.new do |parser|
    parser.banner = 'Usage: heroshell [options] <herokuApp>'
    parser.on('-s', '--sync', 'Force sync of available commands') do ||
        options[:sync] = true
    end
    parser.on('-h', '--help', 'Show help') do ||
        puts parser
        exit 0
    end
end
args = parser.parse!
unless args.length > 0
    puts parser
    exit 1
end
HeroShell.new(args[0], options[:sync]).run
